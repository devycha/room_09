{{#if success}}
  {{#if success.length}}
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
      {{success}}
      <button
        type='button'
        class='btn-close'
        data-bs-dismiss='alert'
        aria-label='Close'
      ></button>
    </div>
  {{/if}}
{{/if}}

{{#if fail}}
  {{#if fail.length}}
    <div class='alert alert-danger alert-dismissible fade show' role='alert'>
      {{fail}}
      <button
        type='button'
        class='btn-close'
        data-bs-dismiss='alert'
        aria-label='Close'
      ></button>
    </div>
  {{/if}}
{{/if}}