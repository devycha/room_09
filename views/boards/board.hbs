
{{> boilerplate}}
<link rel="stylesheet" href="/css/board.css">

<div class="container text-center board-form">
  {{>flash}}
  <div class="row">
    <div class="board-title col-m-12 col-lg-6">제목: {{board.title}}</div>
    <div class="board-title col-m-12 col-lg-6">작성자: {{board.author.name}}({{board.author.code}})</div>
  </div>
  
  <div class="board-description">설명: {{board.description}}</div>


    {{#each board.comments}}
      <p class="board-comment"> {{this.author.name}}({{this.author.code}}) : {{this.content}}
      </p>
    {{/each}}
  

  <form action="/boards/{{board.id}}/comment" method="POST">
    <input type="text" name="comment">
    <button type="text">댓글 작성</button>
  </form>
  <br>
  {{#when currentUser.id 'eq' board.author.id}}
  <button class="btn btn-secondary"><a class="text-decoration-none text-white" href="/boards">목록</a></button>
  <form class="d-inline" action="/boards/{{board.id}}?_method=delete" method="POST">
  <button type="submit" class="btn btn-secondary">삭제</button>
  </form>
  {{/when}}
  <br>
  
</div>