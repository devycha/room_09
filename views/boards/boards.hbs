
{{> boilerplate}}
<link rel="stylesheet" href="/css/board.css">
<a class="create-board" href="/boards/new/board"><button>글쓰기</button></a>

<div class="container">
<table class="table">
  <thead>
    <tr>
      <th scope="col">생성 날짜</th>
      <th scope="col">제목</th>
      <th scope="col">작성자</th>
      <th scope="col">조회수</th>
    </tr>
  </thead>
  <tbody>
    {{#each boards}}
    <tr>
      <td style="width:30%">{{this.createdDate}}</td>
      <td><a class="boardlist-link" href="/boards/{{this.id}}">{{this.title}}</a></td>
      <td style="width:10%">{{this.author.code}}</td>
      <td style="width:10%">{{this.readCounts}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{#when boardsPages 'gt' 0}}
  <ul class="pagination justify-content-center mt-auto">
    <li class="page-item">
      <a class="page-link" href="#">Previous</a>
    </li>
    {{#for 1 boardsPages 1}}
    <li class="page-item"><a class="page-link" href="/boards?offset={{this}}">{{this}}</a></li>
    {{/for}}
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
{{/when}}
</div>