{{> boilerplate}}

<link rel="stylesheet" href="/css/register.css">
<div class="container d-flex justify-content-center">
    <div class="membership-form">
        <h1 class="display-1 text-center text"><a href="/">09ROOM</a></h1>
        
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">마이페이지</li>
                <li class="breadcrumb-item"><a class="text-decoration-none text-muted" href="/users/mypage">정보 변경</a></li>
                <li class="breadcrumb-item active" aria-current="page"><a class="text-muted" href="/users/mypage/password">비밀번호 변경</a></li>
            </ol>
        </nav>
        {{> flash}}
        <div class="member-info">
            <form action="/users/{{currentUser.id}}/password?_method=PATCH" method="POST" class="membershipForm">
                <div class="row">
                    <div class="mb-3 col-lg-12">
                        <label for="password" class="form-label">비밀번호</label>
                        <div class="form-floating">
                            <input name="prevPassword" type="password" class="form-control password" id="prevPassword" placeholder="비밀번호" readonly>
                            <label for="password">현재 비밀번호</label>
                        </div>
                    </div>
                    <div class="mb-3 col-lg-12">
                        <label for="password" class="form-label">새로운 비밀번호</label>
                        <div class="form-floating">
                            <input name="newPassword" type="password" class="form-control password" id="newPassword" placeholder="비밀번호" readonly>
                            <label for="password">새로운 비밀번호</label>
                        </div>
                    </div>
                    <div class="mb-3 col-lg-12">
                        <label for="password" class="form-label">새로운 비밀번호 확인</label>
                        <div class="form-floating">
                            <input name="newPasswordRepeat" type="password" class="form-control password" id="newPasswordRepeat" placeholder="비밀번호" readonly>
                            <label for="password">새로운 비밀번호 확인</label>
                        </div>
                    </div>
                </div>
                <div class="container px-4 mb-3">
                <button class="change-password-btn btn btn-secondary p-2">변경 하기</button> ← 잠금을 풀고 변경하시려면 클릭하세요
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/change-password.js"></script>

{{> footer}}